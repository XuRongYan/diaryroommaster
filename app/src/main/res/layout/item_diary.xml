<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/item_cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="@dimen/margin_16dp"
    android:layout_marginStart="@dimen/margin_16dp"
    android:layout_marginEnd="@dimen/margin_16dp"
    android:foreground="@drawable/card_foreground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_8dp">

        <TextView
            android:id="@+id/tv_diary_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:text="@string/string_test_diary_title"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_diary_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/tv_diary_title"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/color_36gray"
            android:text="@string/string_test_content"
            android:textSize="@dimen/text_12sp"
            />

        <TextView
            android:id="@+id/tv_diary_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_diary_content"
            android:layout_alignParentBottom="true"
            android:gravity="bottom|end"
            android:textSize="@dimen/text_10sp"
            android:text="@string/_2018_1_4_20_39"
            />

    </RelativeLayout>



</android.support.v7.widget.CardView>